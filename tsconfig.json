{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@auth/*": ["./src/lib/auth/*"],
      "@components/*": ["./src/lib/components/*"],
      "@providers/*": ["./src/lib/providers/*"],
      "@push/*": ["./src/lib/push/*"],
      "@store/*": ["./src/lib/store/*"],
      "@types/*": ["./src/lib/types/*"],
      "@utils/*": ["./src/lib/utils/*"],
      "@ui/*": ["./src/lib/components/ui/*"],
      "@public/*": ["./public/*"],
      "@server/*": ["./src/server/*"],
      "@styles/*": ["./src/styles/*"],
      "@trpcLocal/*": ["./src/trpc/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
